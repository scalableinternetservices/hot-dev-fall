<div class="border-form-div">
  <div class="login-form">
    <h3 class="login-title">Log in</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'form-control password-box', autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign in", :class => 'signin_button' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
