<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="noOptSeeded-HomepageReload.enfgiuckxv.us-west-2.elasticbeanstalk.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
      <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <!-- go to to login page and pull authenticity_token-->
      <request>
      <dyn_variable name="authenticity_token" xpath="/html/head/meta[@name='csrf-token']/@content"></dyn_variable>
        <http url='/login' version='1.1' method='GET' />
      </request>

      <!-- encode new Auth token -->
      <setdynvars sourcetype="eval"
            code="fun({Pid,DynVars})->
                {ok,[Val]}=ts_dynvars:lookup(authenticity_token,DynVars),
                http_uri:encode(Val) end.">
            <var name="encoded_authenticity_token" />
        </setdynvars>

      <!-- sign in -->
        <request subst="true">
            <http url='/users/sign_in' version='1.1'
            contents='utf8=%E2%9C%93&amp;authenticity_token=%%_encoded_authenticity_token%%&amp;user%5Bemail%5D=emily%40aol.com&amp;user%5Bpassword%5D=asdasd&amp;commit=Sign+in&amp;user%5Bremember_me%5D=0'
            content_type='application/x-www-form-urlencoded' method='POST'>
            </http>
        </request>

      <!-- reload my contracts 10 times -->
      <for from="1" to="10" incr="1" var="counter">
        <request>
          <http url="/static_pages/home" version="1.1" method="GET"/>
        </request>
      </for>
    </session>
  </sessions>
</tsung>
